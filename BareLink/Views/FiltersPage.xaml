<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BareLink.Views.FiltersPage"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:BareLink.ViewModels;assembly=BareLink"  
             xmlns:model="clr-namespace:BareLink.Models;assembly=BareLink"
             x:Name="BrowseFiltersPage">

  <ContentPage.ToolbarItems>
    <ToolbarItem Command="{Binding AddFilterCommand}" x:DataType="local:FiltersViewModel">
      <ToolbarItem.IconImageSource>
        <FontImageSource Glyph="&#xe145;" />
      </ToolbarItem.IconImageSource>
    </ToolbarItem>
  </ContentPage.ToolbarItems>
  <!--
      x:DataType enables compiled bindings for better performance and compile time validation of binding expressions.
      https://docs.microsoft.com/xamarin/xamarin-forms/app-fundamentals/data-binding/compiled-bindings
    -->
  <RefreshView x:DataType="local:FiltersViewModel" Command="{Binding LoadFiltersCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
    <CollectionView x:Name="ItemsListView"
                ItemsSource="{Binding Filters}"
                SelectionMode="None">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <FlexLayout Direction="Column" Padding="10" x:DataType="model:Filter">
            <Grid HorizontalOptions="StartAndExpand">
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="40" />
              </Grid.ColumnDefinitions>
              <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
              </Grid.RowDefinitions>
              <Label Text="{Binding Name}" 
                     Grid.Row="0"
                     Grid.Column="0"
                     Style="{DynamicResource ListItemTextStyle}"
                     FontSize="16" />
              <Label Text="{Binding Description}" 
                     Grid.Row="1"
                     Grid.Column="0"
                     Style="{DynamicResource ListItemDetailTextStyle}"
                     FontSize="13" />
              <Label FlexLayout.AlignSelf="End" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" FontSize="50" FontFamily="Material">
                <Label.Triggers>
                  <DataTrigger TargetType="Label" Binding="{Binding Active}" Value="true">
                    <Setter Property="Text" Value="&#xef4f;" />
                  </DataTrigger>
                  <DataTrigger TargetType="Label" Binding="{Binding Active}" Value="false">
                    <Setter Property="Text" Value="&#xeb32;" />
                  </DataTrigger>
                </Label.Triggers>
              </Label>
            </Grid>
            <FlexLayout.GestureRecognizers>
              <TapGestureRecognizer 
                NumberOfTapsRequired="1"
                Command="{Binding Source={RelativeSource AncestorType={x:Type local:FiltersViewModel}}, Path=FilterTapped}"		
                CommandParameter="{Binding .}">
              </TapGestureRecognizer>
            </FlexLayout.GestureRecognizers>
          </FlexLayout>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </RefreshView>
</ContentPage>
